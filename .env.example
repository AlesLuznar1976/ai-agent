# AI Agent sistem - konfiguracija okolja
# Kopiraj v .env in nastavi prave vrednosti

# Aplikacija
APP_ENV=development
DEBUG=true

# Baza podatkov (SQL Server)
DATABASE_URL=mssql+pyodbc://ai_agent_user:password@localhost:1433/LargoDb?driver=ODBC+Driver+18+for+SQL+Server

# JWT (generiraj nov ključ za produkcijo!)
JWT_SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Ollama (lokalni LLM)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3:8b

# OpenAI (cloud LLM) - opcijsko
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4-turbo

# Microsoft Graph (Email)
MS_GRAPH_CLIENT_ID=
MS_GRAPH_CLIENT_SECRET=
MS_GRAPH_TENANT_ID=
MS_GRAPH_MAILBOX=info@luznar.si

# CalcuQuote
CALCUQUOTE_API_KEY=
CALCUQUOTE_URL=https://api.calcuquote.com/v1

# Šifriranje (generiraj z: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=

# CORS (ločeno z vejico)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
